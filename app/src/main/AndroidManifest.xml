<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chenls.smartlock">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Timetodo">
        <activity
            android:name=".WelcomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceListActivity"
            android:theme="@style/DialogLight" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_welcome" />

        <service
            android:name=".UartService"
            android:enabled="true" />

        <activity
            android:name=".MyPhoneCardActivity"
            android:label="@string/title_activity_my_phone_card"
            android:theme="@style/DialogLight" />
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/DialogLight" />
        <activity
            android:name=".com.chenls.smarlock.setting.Choose"
            android:label="@string/title_activity_choose"
            android:theme="@style/DialogLight" />
        <activity
            android:name=".com.chenls.smarlock.setting.Input"
            android:label="@string/title_activity_input"
            android:theme="@style/DialogLight" />
        <activity
            android:name=".AboutSLActivity"
            android:label="@string/title_activity_about_sl"
            android:theme="@style/DialogLight"></activity>
    </application>

</manifest>
